<div class="UpdateNews ws-flexbox ws-flex-column">
    <SbisEnv._Maintains.Parking.Header scope="{{ _options.header }}" />
    <div class="UpdateNews__body ws-flexbox ws-flex-row">
        <img src='{{ _options.image }}' class='UpdateNews__image' />
        <div class="UpdateNews__content ws-flexbox ws-flex-column">
            <div class="UpdateNews__content__header">
                <span>СБИС обновляется до версии {{ _options.version }}</span>
            </div>
            <div class="UpdateNews__content__header UpdateNews__content__top_bordered">
                <span>О новом:</span>
            </div>
            <Controls.Container.Scroll attr:class="UpdateNews__content__scroll" scrollbarVisible='{{ true }}'
                shadowVisible='{{ true }}'>
                <ws:partial template='{{_options.content}}' />
            </Controls.Container.Scroll>
            <div class="UpdateNews__content__footer"></div>
        </div>
    </div>
</div>
