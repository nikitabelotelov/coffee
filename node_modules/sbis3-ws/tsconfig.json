{
  "compilerOptions": {
    "module": "amd",
    "moduleResolution": "classic",
    "target": "es5",
    "lib": ["dom", "es5", "es2015", "scripthost"],
    "declaration": false,
    "noImplicitAny": false,
    "stripInternal": true,
    "sourceMap": false,
    "alwaysStrict": true,
    "traceResolution": false,
    "diagnostics": false,
    "locale": "ru",
    "importHelpers": true,
    "experimentalDecorators": true,
    "baseUrl": ".",
    "typeRoots": ["node_modules/@types"],
    "types" : ["requirejs"],
    "paths": {
      "tslib": ["WS.Core/ext/tslib"]
    }
  },
  "include": [
    "WS.Core/ext/tslib.js",
    "WS.Core/core/**/*.ts",
    "WS.Core/ws.d.ts",
    "WS.Core/lib/core.d.ts",
    "Vdom/**/*.ts",
    "View/**/*.ts"
  ],
  "exclude": [
    "WS.Core/lib/ServerEvent/worker/**/*.ts",
    "WS.Core/core/polyfill",
    "application/",
    "node_modules/",
    "builder-ui/"
  ]
}
